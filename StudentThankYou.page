<apex:page Controller="StudentRecordController">  
  <apex:sectionHeader title="Visualforce Example" subtitle="Thank You Record inserted"/>

  <apex:form >
    <apex:pageBlock title="Student Record">

      <apex:pageBlockSection showHeader="false" columns="2">
        <apex:inputField value="{!studentRecord.Student_Name__c}" />
        <apex:inputField value="{!studentRecord.Roll_Number__c}" />
        <apex:inputField value="{!studentRecord.Gender__c}" />
        <apex:inputField value="{!studentRecord.Course__c}" />
        <apex:inputField value="{!studentRecord.HSC__c}" />
        <apex:inputField value="{!studentRecord.SSC__c}" />
        <apex:inputField value="{!studentRecord.City__c}" />
        <apex:inputField value="{!studentRecord.State__c}" />
        <apex:inputField value="{!studentRecord.Country__c}" />
      </apex:pageBlockSection>

    </apex:pageBlock>
  </apex:form>
</apex:page>  